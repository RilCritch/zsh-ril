#!/usr/bin/env bash

# Simple set of bash variables to hold ansi escape sequences for my environment

# Author: RilCrith 

# text color ##################################################################

# regular colors
bk='\033[30m'
rd='\033[31m'
gn='\033[32m'
yl='\033[33m'
bl='\033[34m'
mg='\033[35m'
cn='\033[36m'
wh='\033[37m'

# light colors
l_bk='\033[90m'
l_rd='\033[91m'
l_gn='\033[92m'
l_yl='\033[93m'
l_bl='\033[94m'
l_mg='\033[95m'
l_cn='\033[96m'
l_wh='\033[97m'

###############################################################################

# background color ############################################################

# regular colors
b_bk='\033[40m'
b_rd='\033[41m'
b_gn='\033[42m'
b_yl='\033[43m'
b_bl='\033[44m'
b_mg='\033[45m'
b_cn='\033[46m'
b_wh='\033[47m'

# light colors
b_l_bk='\033[100m'
b_l_rd='\033[101m'
b_l_gn='\033[102m'
b_l_yl='\033[103m'
b_l_bl='\033[104m'
b_l_mg='\033[105m'
b_l_cn='\033[106m'
b_l_wh='\033[107m'

###############################################################################

# text styles #################################################################

cR='\033[0m'
cBld='\033[1m'
cDim='\033[2m'
cIta='\033[3m'
cUnd='\033[4m'
cStr='\033[9m'

###############################################################################
